# Read the content of the file
with open("C:/Users/sergi/Documents/COMP 473/Project/PH2Dataset/PH2_dataset.txt", 'r') as file:
    lines = file.readlines()

# Replace "||" with "|" for smoother read
modified_lines = [line.replace('||', '|') for line in lines]

# Red up to line 201, after 201 is just the legends
modified_content = ''.join(modified_lines[:201])

# Write the modified content back to the file
with open("C:/Users/sergi/Documents/COMP 473/Project/PH2Dataset/mod_PH2_dataset.txt", 'w') as file:
    file.write(modified_content)

import pandas as pd   
# read text file into pandas DataFrame 
df = pd.read_csv("C:/Users/sergi/Documents/COMP 473/Project/PH2Dataset/mod_PH2_dataset.txt", sep="|") 

#drop mistaken column
df = df.drop(df.columns[0], axis=1)
df = df.drop(df.columns[10], axis=1)

df.columns = ['Name', 'Histological_Diagnosis', 'Clinical_Diagnosis',
       'Asymmetry', 'Pigment_Network', 'Dots/Globules', 'Streaks',
       'Regression_Areas', ' Blue-Whitish_Veil', 'Colors']

